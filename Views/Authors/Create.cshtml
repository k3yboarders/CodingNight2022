@model LibraryCodingNight.Models.Author

@{
    ViewData["Title"] = "Dodaj autora";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h1>Dodaj autora</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AuthorName" class="control-label">Imię i nazwisko</label>
                <input asp-for="AuthorName" class="form-control" />
                <span asp-validation-for="AuthorName" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Powrót do listy</a>
</div>

