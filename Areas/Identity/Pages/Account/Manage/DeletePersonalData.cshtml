@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Usuń dane osobowe";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
    Layout = "_LayoutProfile";
}

<h3>@ViewData["Title"]</h3>

<div class="alert alert-warning" role="alert">
        <strong>Usunięcie tych danych spowoduje trwałe usunięcie Twojego konta, którego nie można odzyskać.</strong>
</div>

<div>
    <form id="delete-user" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                <label asp-for="Input.Password" class="form-label"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="w-100 btn btn-lg btn-danger mt-3" type="submit">Usuń dane i zamknij moje konto</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
